public class larele {
    public static int largest(int arr[]){
        int res = 0;
        for (int i = 0; i < arr.length; i++) {
            if(arr [i] >arr [res]){
                res = i;

            


            }
            return res;
            
           
            
        }
        return -1;
    }
    public static void main(String[] args) {
        int arr[] = {5,10,12,20,10};

        int res = largest(arr);
        System.out.println(res);
    }
    
}
